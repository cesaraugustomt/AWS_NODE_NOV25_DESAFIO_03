{
  "name": "aws_node_nov25_desafio_03",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "dev": "npm run services:up && nodemon --exec ts-node ./src/index.ts",
    "start:dev": "npm run services:up && npm run wait-for-mariadb && npm run migration:run && npm run seed:run",
    "test:ci": "npm run services:up && concurrently -n nodejs,jest --hide nodejs -k -s command-jest \"npm start \" \"jest --runInBand --verbose\"",
    "test": "jest --runInBand ",
    "test:watch": "jest --watchAll --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "services:logs": "docker compose -f src/infra/compose.yaml logs -f",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:sync": "npm run typeorm schema:sync -- -d ./src/infra/data-source.ts",
    "typeorm:drop": "npm run typeorm schema:drop -- -d ./src/infra/data-source.ts",
    "typeorm:reset": "npm run typeorm:drop && npm run typeorm:sync",
    "typeorm:migrate": "env NODE_ENV=development npm run typeorm migration:generate -- -n",
    "typeorm:create": "env NODE_ENV=development npm run typeorm migration:create -- -n",
    "typeorm:run": "ts-node -r tsconfig-paths/register $(yarn bin typeorm) migration:run",
    "migration:run": "npm run typeorm migration:run -- -d ./src/infra/data-source.ts",
    "seed:run": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./src/infra/data-source.ts",
    "wait-for-mariadb": "node src/infra/scripts/wait-for-mariadb.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/async-retry": "^1.4.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.2",
    "@types/node-fetch": "^2.6.12",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "concurrently": "8.2.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "mockdate": "^3.0.5",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.7",
    "async-retry": "^1.3.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.3",
    "node-fetch": "^2.7.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.6.2",
    "uuid": "^11.0.2"
  }
}
